<%=render Templates::FormTemplateComponent.new(
  parent: @project,
  model: @sample,
  items: [
      {label: "Projects", path: projects_path},
      { label: @project.name, path: project_path(@project)},
      {label: "Samples", path: project_samples_path(@project)},
      {label: "Edit"}
    ],
  title: "Edit Sample", 
  actions: [
    {
      label: "Back", 
      path_proc: ->(project) {project_samples_path(project)}
    }
  ], 
  fields: [:name, :description, :sample_type, :photo],
  show_picture: true
)%>