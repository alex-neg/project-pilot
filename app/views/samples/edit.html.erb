<section class="p-6 mx-auto mt-10 max-w-xl bg-white rounded shadow">
  <h1 class="mb-6 text-2xl font-bold text-gray-800">Edit Sample</h1>

  <%= form_with model: [@project, @sample], local: true do |form| %>
    <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
        <%= form.label :sample_type, "Sample Type", class: "block text-gray-700 font-semibold mb-2 mt-4" %>
        <%= form.select :sample_type, Sample.sample_types.keys.map { |type| [type.titleize, type] }, {}, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
        <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_field :description, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <div class="flex justify-between items-center">
      <%= form.submit "Update Sample", class: "bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      <%= link_to "Back to Samples", project_samples_path(@project), class: "text-gray-600 hover:underline ml-4" %>
    </div>
  <% end %>
</section>
