<%= render Templates::ListTemplateComponent.new(
    breadcrumb: [
      {label: "Projects", path: projects_path}, 
      {label: @project.name, path: project_path(@project)},
      {label: "Samples", path: project_samples_path(@project)}
    ],
    header: {
      items: @project,
      title: "Samples",
      actions: [
        {
          label: "Create Sample", 
          path: new_project_sample_path,
          variant: :primary
        }
      ]
  },
  table: {
    items: @samples, 
    pagy: @pagy,
    columns: [ 
      {
        label: "ID", 
        accessor: :id, 
      }, 
      {
        label: "Name", 
        accessor: :name,
      }, 
      {
        label: "Description", 
        accessor: :description
      },
      {
        label: "Type",
        accessor: :sample_type
      },
      {
        label: "Photo", 
        accessor: :photo
      },
    ],
    actions: [
      {
        label: "View",
        path_proc: ->(sample) {project_sample_path(sample.project_id, sample)}
      }, 
      {
        label: "Edit",
        path_proc: ->(sample) {edit_project_sample_path(sample.project_id, sample)}
      }, 
      {
        label: "Delete",
        path_proc: ->(sample) {project_sample_path(sample.project_id, sample)},
        variant: :link_danger,
        data: { turbo_confirm: "Are you sure?", turbo_method: :delete }
      }
    ]
  } 
)%>
