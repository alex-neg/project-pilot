<%= render Templates::ListTemplateComponent.new(
    # breadcrumb: "Projects/#{@project.name}/Samples",
    breadcrumb: [
      {label: "Projects", path: projects_path}, 
      {label: @project.name, path: project_path(@project)},
      {label: "Samples", path: project_samples_path(@project)}
    ],
    title: "Samples", 
    action_button: Library::ButtonComponent.new(
        label: "Create Sample", 
        path: new_project_sample_path(@project, @sample),
        variant: :primary
      ),
    items: @samples,
    columns: [ 
    {
      label: "ID", 
      accessor: :id, 
    }, 
    {
      label: "Name", 
      accessor: :name,
    },
    {
      label: "Description", 
      accessor: :description,
    },
    {
      label: "Type", 
      accessor: :sample_type,
    },
    {
      label: "Photo", 
      show_picture: true
    },
    {
      label: "Actions", 
      custom_render: true
    }
  ],
  actions: [
    {
      label: "View", 
      path_proc: ->(project, sample) {project_sample_path(project, sample)}
    }, 
    {
      label: "Edit", 
      path_proc: ->(project, sample) {edit_project_sample_path(project, sample)}
    }, 
    {
      label: "Delete", 
      path_proc: ->(project, sample) {project_sample_path(project, sample)},
      variant: :link_danger,
      data: { turbo_confirm: "Are you sure?", turbo_method: :delete }
    }
  ]
)%>
