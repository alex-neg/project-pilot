<section class="p-6 mx-auto mt-10 max-w-xl bg-white rounded shadow">
  <h1 class="mb-6 text-2xl font-bold text-gray-800">Sample Details</h1>

  <div class="mb-6 space-y-2 text-gray-700">
    <p><span class="font-semibold">ID:</span> <%= @sample.id %></p>
    <p><span class="font-semibold">Name:</span> <%= @sample.name %></p>
    <p><span class="font-semibold">Type:</span> <%= @sample.sample_type %></p>
    <p><span class="font-semibold">Description:</span> <%= @sample.description %></p>
  </div>

  <div class="flex flex-wrap gap-4 mb-6">
    <%= link_to "Edit", edit_project_sample_path(@project, @sample), class: "px-4 py-2 bg-emerald-500 text-white rounded hover:bg-emerald-600" %>
    <%= link_to "Delete", project_sample_path(@project, @sample), data: { confirm: "Are you sure?", turbo_method: :delete }, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" %>
    <%= link_to "Back to Samples", project_samples_path(@project), class: "px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600" %>
  </div>

  <%= link_to "Back to Project", project_path(@project), class: "inline-block text-emerald-600 hover:underline font-semibold" %>
</section>