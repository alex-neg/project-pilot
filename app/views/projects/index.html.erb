<%=render Templates::ListTemplateComponent.new(
  breadcrumb: [
    {label: "Projects", path: projects_path}
    ],
  title: "Projects",
  table: {
    items: @projects, 
    pagy: @pagy,
    columns: [ 
    {
      label: "ID", 
      accessor: :id, 
    }, 
    {
      label: "Name", 
      accessor: :name,
    }
    ],
    actions: [
    {
      label: "View", 
      path_proc: ->(args) {project_path(args[:item])},
    
    }, 
    {
      label: "Edit", 
      path_proc: ->(args) {edit_project_path(args[:item])},
    }, 
    {
      label: "Delete", 
      path_proc: ->(args) {project_path(args[:item])},
      variant: :link_danger,
      data: { turbo_confirm: "Are you sure?", turbo_method: :delete }
    }
    ]
  }
)%>