<section class="p-6 mx-auto mt-10 max-w-xl bg-white rounded shadow">
  <h1 class="mb-6 text-2xl font-bold text-gray-800">Project Details</h1>

  <div class="mb-6 space-y-2 text-gray-700">
    <p><span class="font-semibold">ID:</span> <%= @project.id %></p>
    <p><span class="font-semibold">Name:</span> <%= @project.name %></p>
  </div>

  <div class="flex flex-wrap gap-4 mb-6">
    <%= link_to "Edit", edit_project_path(@project), class: "px-4 py-2 bg-emerald-500 text-white rounded hover:bg-emerald-600" %>
    <%= link_to "Delete", project_path(@project), data: { confirm: "Are you sure?", turbo_method: :delete }, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" %>
    <%= link_to "Back", projects_path, class: "px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600" %>
  </div>

  <div class="flex flex-col">
    <%= link_to "View Sites", project_sites_path(@project), class: "inline-block text-emerald-600 hover:underline font-semibold" %>
    <%= link_to "View Samples", project_samples_path(@project), class: "inline-block text-emerald-600 hover:underline font-semibold" %>
  </div>
</section>