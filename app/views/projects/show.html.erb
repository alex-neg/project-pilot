<%= render Templates::DetailTemplateComponent.new(
  model: @project,
  items: [
    { label: "Projects", path: projects_path },
    { label: @project.name, path: project_path(@project) }
  ],
  
  attributes: [
    {
      label: "Name",
      value: @project.name
    },
    {
      label: "Id",
      value: @project.id
    }, 
    {
      label: "Sites", 
      path: project_sites_path(@project), 
      variant: :link
    }, 
    {
      label: "Samples",
      path: project_samples_path(@project),
      variant: :link
    }, 
    {
      label: "Small Finds",
      path: project_small_finds_path(@project),
      variant: :link
    },
    actions: [
      {
        label: "Edit",
        path: edit_project_path(@project),
        variant: :secondary
      },
      {
        label: "Delete",
        path: project_path(@project),
        variant: :danger,
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        }
      }
    ]
  ]

) %>