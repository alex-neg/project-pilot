<%= render Templates::DetailTemplateComponent.new(
  model: @project,
  items: [
    { label: "Projects", path: projects_path },
    { label: @project.name, path: project_path(@project) }
  ],
  nav_buttons: [
    Library::ButtonComponent.new(label: "View Sites", path: project_sites_path(@project), variant: :primary),
    Library::ButtonComponent.new(label: "View Samples", path: project_samples_path(@project), variant: :primary),
    Library::ButtonComponent.new(label: "Small Finds", path: project_small_finds_path(@project), variant: :primary)
  ],
  action_buttons: [
    Library::ButtonComponent.new(label: "Edit", path: edit_project_path(@project), variant: :secondary),
    Library::ButtonComponent.new(label: "Delete", path: project_path(@project), variant: :danger, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" })
  ],
  show_picture: false
) %>