<%= render Templates::ListTemplateComponent.new(
    breadcrumb: [
      {label: "Projects", path: projects_path},
      { label: @project.name, path: project_path(@project)},
      {label: "Sites", path: project_sites_path(@project)}
    ],
    title: "Sites", 
    action_button: Library::ButtonComponent.new(
        label: "Create Site", 
        path: new_project_site_path(@project, @site),
        variant: :primary
      ),
    resource: @sites,
    pagy: @pagy,
    columns: [ 
    {
      label: "ID", 
      accessor: :id, 
    }, 
    {
      label: "Name", 
      accessor: :name,
    },
    {
      label: "Project ID", 
      accessor: :project_id
    },
    {
      label: "Actions", 
      custom_render: true
    },
  ],
  actions: [
    {
      label: "View", 
      path_proc: ->(project, site) {project_site_path(project, site)}
    }, 
    {
      label: "Edit", 
      path_proc: ->(project, site) {edit_project_site_path(project, site)}
    }, 
    {
      label: "Delete", 
      path_proc: ->(project, site) {project_site_path(project, site)},
      variant: :link_danger,
      data: { turbo_confirm: "Are you sure?", turbo_method: :delete }
    }
  ]
)%>