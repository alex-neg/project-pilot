<%= render Templates::DetailTemplateComponent.new(
  model: @site,
  items: [
      {label: "Projects", path: projects_path},
      { label: @project.name, path: project_path(@project)},
      {label: "Sites", path: project_sites_path(@project)},
      { label: @site.name, path: project_sites_path(@project)},
    ],
  attributes: [
    {
      label: "Name",
      value: @site.name,
    },
    {
      label: "ID",
      value: @site.id
    },
  ],
  actions: [
    {
      label: "Edit",
      path: edit_project_site_path(@project, @site),
      variant: :secondary,
    },
    {
      label: "Delete",
      path: project_site_path(@project, @site),
      variant: :danger,
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      }
    }
  ],
  show_picture: false
) %>