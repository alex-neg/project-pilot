<%=render Templates::FormTemplateComponent.new(
  breadcrumb: [
      {label: "Projects", path: projects_path},
      { label: @project.name, path: project_path(@project)},
      {label: "Small Finds", path: project_small_finds_path(@project)},
      {label: "Edit"}
    ],
  header: {
      title: "Edit Small Find",
    },
  form: {
    record: @small_find,
    url: project_small_find_path,
    submit_label: "Update",
    inputs: [
      {
          label: "Name",
          accessor: :name
      },
      {
          label: "Description",
          accessor: :description
      },
      {
          label: "Type",
          type: :select,
          accessor: :find_type,
          collection: SmallFind.find_types.keys.map { |key| [key.titleize, key] }
      },
      {
          label: "Image Before",
          accessor: :before_photo
      },
      {
          label: "Image Afer",
          accessor: :after_photo
      }
    ],
    }
)%>