<%= render Templates::ListTemplateComponent.new(
    breadcrumb: [
      {label: "Projects", path: projects_path}, 
      {label: @project.name, path: project_path(@project)},
      {label: "Small Finds", path: project_small_finds_path(@project)}
    ],
    header: {
      items: @project,
      title: "Small Finds",
      actions: [
        {
          label: "Create Small Finds", 
          path: new_project_small_find_path,
          variant: :primary
        }
      ]
    },
  table: {
    items: @small_finds, 
    pagy: @pagy,
    columns: [ 
      {
        label: "ID", 
        accessor: :id, 
      }, 
      {
        label: "Name", 
        accessor: :name,
      }, 
      {
        label: "Description", 
        accessor: :description
      },
      {
        label: "Type",
        accessor: :find_type
      },
      {
        label: "Image Before", 
        accessor: :before_photo
      },
            {
        label: "Image After", 
        accessor: :after_photo
      },
    ],
    actions: [
      {
        label: "View",
        path_proc: ->(small_find) {project_small_find_path(small_find.project_id, small_find)}
      }, 
      {
        label: "Edit",
        path_proc: ->(small_find) {edit_project_small_find_path(small_find.project_id, small_find)}
      }, 
      {
        label: "Delete",
        path_proc: ->(small_find) {project_small_find_path(small_find.project_id, small_find)},
        variant: :link_danger,
        data: { turbo_confirm: "Are you sure?", turbo_method: :delete }
      }
    ]
  } 
) %>
